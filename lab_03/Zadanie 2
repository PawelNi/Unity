using UnityEngine;

public class Poruszanie : MonoBehaviour
{
    public float speed = 2.0f;
    public float dystans = 10.0f;

    private Vector3 pozycjaStartowa;
    private int kierunek = 1;

    void Start()
    {
        pozycjaStartowa = transform.position;
    }

    void Update()
    {
        transform.position += Vector3.right * (kierunek * speed * Time.deltaTime);

        float przesuniecieX = transform.position.x - pozycjaStartowa.x;

        if (kierunek == 1 && przesuniecieX >= dystans)
        {
            transform.position = new Vector3(pozycjaStartowa.x + dystans, transform.position.y, transform.position.z);
            kierunek = -1;
        }
        else if (kierunek == -1 && przesuniecieX <= 0f)
        {
            transform.position = new Vector3(pozycjaStartowa.x, transform.position.y, transform.position.z);
            kierunek = 1;
        }
    }
}
